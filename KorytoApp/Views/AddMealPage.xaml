<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KorytoApp.Views.AddMealPage"
             Title="Dodaj posiłek">

    <VerticalStackLayout Padding="10">
        <Label Text="Posiłek:"/>
        <Entry x:Name="nameEntry" Placeholder="Nazwa posiłku"/>
        <Label Text="Kalorie:"/>
        <Entry x:Name="calEntry" Placeholder="0" Keyboard="Numeric"/>
        <Label Text="Woda w ml:"/>
        <Entry x:Name="waterEntry" Placeholder="0" Keyboard="Numeric"/>
        <Button Text="Dodaj" Clicked="OnAddClicked"/>
    </VerticalStackLayout>
</ContentPage>