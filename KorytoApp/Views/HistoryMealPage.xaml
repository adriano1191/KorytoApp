<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="KorytoApp.Views.HistoryMealPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:KorytoApp.Views"
    xmlns:viewmodels="clr-namespace:KorytoApp.ViewModels"
    xmlns:models="clr-namespace:KorytoApp.Models"
    x:Name="historyPage"
    mc:Ignorable="d">
    
    <ContentPage.Content>
        <VerticalStackLayout Padding="10" Spacing="20">

            <DatePicker x:Name="datePicker" DateSelected="OnDateSelected"/>
            
            <Label Text="Spożyte dziś kalorie:" FontSize="24"/>
            <Label Text="{Binding TotalCalories}" FontSize="36" TextColor="DarkRed"/>
            <Label Text="{Binding TotalWater}" FontSize="36" TextColor="LightBlue"/>

            <ListView ItemsSource="{Binding Meals}"
                  HasUnevenRows="True"
                  VerticalOptions="FillAndExpand"
                  SeparatorVisibility="Default">

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Meal">
                        <ViewCell>
                            <SwipeView>
                                <SwipeView.RightItems>
                                    <SwipeItems>
                                        <SwipeItem Text="Usuń"
                                               BackgroundColor="Red"
                                               Command="{Binding BindingContext.DeleteMealCommand, Source={x:Reference historyPage}}"
                                               CommandParameter="{Binding .}" />
                                    </SwipeItems>
                                </SwipeView.RightItems>

                                <Grid Padding="10">
                                    <VerticalStackLayout>
                                        <Label Text="{Binding Name}" FontSize="18" TextColor="BurlyWood"/>
                                        <Label Text="{Binding Calories, StringFormat='{}{0} kcal'}" FontSize="14" TextColor="white"/>
                                        <Label Text="{Binding Water, StringFormat='{}{0} ml wody'}" FontSize="14" TextColor="white"/>
                                    </VerticalStackLayout>
                                </Grid>
                            </SwipeView>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>
