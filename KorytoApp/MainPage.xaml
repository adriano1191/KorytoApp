                />
                </Border>
                -->
                <Border
                    Grid.Row="1"
                    Margin="16,8"
                    Padding="10"
                    BackgroundColor="#2b2b2b"
                    StrokeShape="RoundRectangle 12"
                    StrokeThickness="0"
                    VerticalOptions="End">
                    <VerticalStackLayout>

                        <Label
                            FontSize="22"
                            HorizontalOptions="Fill"
                            HorizontalTextAlignment="Center"
                            LineBreakMode="NoWrap"
                            MaxLines="1"
                            Text="{Binding CaloriesLabelText}"
                            TextColor="#ed3131" />

                        <Label
                            FontSize="22"
                            HorizontalOptions="Fill"
                            HorizontalTextAlignment="Center"
                            LineBreakMode="NoWrap"
                            MaxLines="1"
                            Text="{Binding WaterLabelText}"
                            TextColor="#25a8e6" />
                    </VerticalStackLayout>

                </Border>
                <!--
        <ListView ItemsSource="{Binding MealsToday}"
                  HasUnevenRows="True"
                  VerticalOptions="FillAndExpand"
                  SeparatorVisibility="Default">

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:Meal">
                    <ViewCell>
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Usuń"
                                               BackgroundColor="Red"
                                               Command="{Binding BindingContext.DeleteMealCommand, Source={x:Reference mainPage}}"
                                               CommandParameter="{Binding .}" />
                                </SwipeItems>
                            </SwipeView.RightItems>

                            <Grid Padding="10">
