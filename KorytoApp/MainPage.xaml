                            </Grid>
                        </SwipeView>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

                -->
            </VerticalStackLayout>

        </ScrollView>
        <Border
            Grid.Row="1"
            Margin="16,8"
            Padding="1"
            BackgroundColor="#2b2b2b"
            StrokeShape="RoundRectangle 12"
            StrokeThickness="0"
            VerticalOptions="End">
            <Grid
                Grid.Row="1"
                Padding="12,8"
                ColumnDefinitions="*,*,*"
                VerticalOptions="End">
                <Button
                    Grid.Column="0"
                    Clicked="OnAddMealClicked"
                    Text="Dodaj posiłek" />
                <Button
                    Grid.Column="1"
                    Clicked="OnUserDataClicked"
                    Text="Dane" />
                <Button
                    Grid.Column="2"
                    Clicked="OnHistoryMealClicked"
                    Text="Historia" />
            </Grid>
        </Border>
        <!--
        <Button Text="Dodaj posiłek" Clicked="OnAddMealClicked"/>
